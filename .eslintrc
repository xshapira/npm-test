{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "func-names": 0,
    "no-console": 0,
    "no-unused-vars": 1,
    "no-process-exit": 0,
    "object-shorthand": 0,
    "class-methods-use-this": 0
  }
}
